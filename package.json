{
  "name": "webpack-watch-files-plugin",
  "version": "1.1.0",
  "description": "Webpack watch files",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run build:watch",
    "build": "babel ./src -d ./lib",
    "build:watch": "babel ./src -wd ./lib",
    "lint": "standard",
    "mocha": "mocha \"src/**/*.test.js\"",
    "mocha:watch": "mocha --watch \"src/**/*.test.js\"",
    "test": "npm run lint && npm run mocha",
    "test:watch": "npm run lint && npm run mocha:watch",
    "prepublish": "npm run build"
  },
  "author": "Florent Detry <florent@fdetry.be> (http://fdetry.be/)",
  "license": "ISC",
  "dependencies": {
    "glob": "^7.1.6",
    "lodash": "^4.17.21"
  },
  "standard": {
    "parser": "@babel/eslint-parser"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/core": "^7.13.16",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-class-properties": "^7.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/preset-env": "^7.13.15",
    "@babel/register": "^7.13.16",
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "standard": "^16.0.3",
    "webpack": "^5.36.1"
  },
  "peerDependencies": {
    "webpack": "^3 || ^4 || ^5"
  }
}
